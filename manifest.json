{
  "manifest_version": 3,
  "name": "Binance P2P Risk Detector",
  "version": "0.1.0",
  "description": "Detects high-risk Binance P2P traders using local heuristics",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://p2p.binance.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://p2p.binance.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
